html,body,div,h1,h2,h3,p,ul,li,a,img{		
	margin: 0;		
	padding: 0;		
}

html, body {
	width: 100%;
	height: auto;
	font-family: 'Lato', Arial, Sans Serif;
	background-color: #a0aec1;
}

h1 {
	font-family: 'code_lightregular', 'Lato', Arial, Sans Serif;
	display: inline;
	font-size: 60px;
}

h2 {}

span {
	display: inline-block;
}

a {
	text-decoration: none;
	color: black;
}

#header {
	height: auto;
	width: 100%;
	display: block;
	background-color: #3E5B78;
	position: fixed;
	z-index: 5;
	top: 0;
}

#logo {
	height: 75px;
	width: 75px;
	margin-left: 25%;
	display: inline-block;
	background: url("<%= asset_path("azimuth_small.png") %>") center no-repeat;
	background-size: contain;
}

.login_button {
	height: 40px;
	width: 70px;
	float: right;
	margin-right: 25%;	
	margin-top: 19.5px;
	margin-bottom: 19.5px;
	display: inline;
	-webkit-box-shadow: 0 2px 2px #333;
	box-shadow: 0 2px 2px #333;
	border-radius: 3px;
	border: none;
	background-color: #FF9933;
	color: #FFF;
	font-family: 'code_boldregular';
	line-height: 40px;
	text-align: center;
}

#avatar {
	height: 48px;
	width: 48px;
	float: right;
	margin-right: 20px;
	margin-top: 13.5px;
	margin-bottom: 13.5px;
	display: inline;
	-webkit-box-shadow: 0 2px 2px #333;
	box-shadow: 0 2px 2px #333;
	border-radius: 3px;
	background-color: #999;
	overflow: hidden;
}

#main {
	height: auto;
	width: 100%;
	margin-top: 75px;
	display: block;
	text-align: center;
}

#about_background {
	height: auto;
	min-height: 400px;
	width: 100%;
	display: block;
}

.content_realignment {
	height: auto;
	width: 1000px;
	display: inline-block;
}

#map_wrapper {
	height: 550px;
	width: 100%;
	display: block;
}

/* MAP */
#chart {
	height: 100%;
	width: 100%;
	display: block;
	cursor: move;
}

#zoom_holder {
	height: 50px;
	width: 1000px;
	left: 50%;
	margin-left: -500px;
	margin-top: 50px;
	display: inline-block;
	position: absolute;
}

.zoom_header {
	position: static !important;
	margin-top: 12.5px !important;
	margin-right: 20px;
	width: auto !important;
	float: right;
}

#zoom_holder_vertical {
    height: 50px;
    width: 25px;
    display: block;
    float: right;
	-webkit-box-shadow: 0 2px 2px #333;
	box-shadow: 0 2px 2px #333;
}

.zoom_button {
  height: 25px;
  width: 25px;
  display: block;
  background-color: #FF9933;
  color: #FFF;
  text-align: center;
  line-height: 25px;
  font-weight: bold;
  cursor: pointer;
}

#zoom_in {
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}

#zoom_out {
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;  
}

svg {
	height: 600px;
	width: 800px;
	overflow: visible;
	display: inline-block;
}
path { fill: #627894; stroke: #000000; }
g.bubble { }
circle { stroke-width:0.5px; vector-effect:non-scaling-stroke }
circle.f { stroke:#FFF; fill-opacity: 0.8}
circle.m { stroke:#FFF; fill-opacity: 0.8}


/* Content */
.about_align {
	margin-top: 25px;
	margin-bottom: 25px;
	text-align: justify;
	background-color: rgba(219,232,249,0.75);
	border-radius: 10px;
}

.text_align {
	height: auto;
	width: 980px;
	display: block;
	margin: 5px 10px 10px 10px;
}

.table_wrapper {
	height: auto;
	width: 1000px;
	margin-top: 10px;
	display: inline-block;
}

.table_expand {
	text-align: left;
}

.table_box {
	height: 0px;
	width: 1000px;
	display: block;
	background-color: rgba(219,232,249,0.75);
	border-radius: 10px;
	overflow-y: scroll;
	text-align: center;
}

.table_box.profile {
	height: 250px;
	overflow: hidden;
}

.slide_span {
	width: 10px;
	display: inline-block;
}

.slide_span.profile {
	width: 895px;
}

.x_box {
	display: inline-block;
	font-size: 30px;
	font-weight: 900;
	cursor: pointer;
}

.x_box.profile {
	-moz-transform: rotate(45deg);
	-webkit-transform: rotate(45deg);
	-o-transform: rotate(45deg);
	-ms-transform: rotate(45deg);
	transform: rotate(45deg);
}

.profile_horizontal {
	height: auto;
	width: 155px;
	margin-left: 10px;
	margin-right: 10px;
	display: block;
	float: left;
	text-align: center;
}

.profile_horizontal.tweets {
	height: 85%;
	width: 610px;
	margin-left: 20px;
	margin-top: 20px;
	display: block;
	background-color: rgba(219,232,249,0.25);
	overflow-y: scroll;
}

.profile_picture {
	height: 128px;
	width: 128px;
	margin-top: 20px;
	display: inline-block;
	border: 3px solid #F60;
	border-radius: 5%;
	overflow: hidden;
	display: inline-block;
}

.text_split {
	height: 40px;
	width: 155px;
	display: block;
	padding: 5px;
	margin-top: 20px;
	background-color: rgba(219,232,249,0.50);
	border-bottom: solid 1px #FFF;
	text-align: left;
}

p.text_split_title {
	color: #466289;
	letter-spacing: 1px;
	font-size: 14px;
	font-family: 'code_lightregular', 'Lato', Arial, Sans Serif;
	margin-bottom: 5px;
}

.tweet_box {
	height: auto;
	width: auto;
	margin: 5px;
	padding: 5px;
	display: block;
	background-color: rgba(219,232,249,0.75);
	text-align: left;	
}

p.tweet_time_loc {
	color: #466289;
	font-size: 16px;
	font-family: 'Lato', Arial, Sans Serif;
	margin: 5px;
}

p.tweet_text {
	margin: 5px;
	font-size: 21px;
}

.coordinate_table {
	list-style-type: none;
	margin: 20px;
}

.coordinate {
	height: 20px;
	width: 100px;
	display: inline-block;
	float: left;
	color: #466289;
	border: solid 1px #466289;
	margin: 1px;
}

#footer {
	height: 75px;
	width: 100%;
	background-color: #3E5B78;
	display: block;
	text-align: center;
	position: relative;
}

.twitter_public {
	height: 50px;
	width: 50px;
	margin-top: 10px;
	display: inline-block;
	background: url("<%= asset_path("Twitter_circle.png") %>") center no-repeat;
	border-radius: 50%;
}

input[type="twitter-button"]
{
  background:url(sign-in-with-twitter-gray.png);
  text-indent: -9999em;
}

@font-face {
    font-family: 'code_boldregular';
    src: url('<%= font_path("code_bold-webfont.eot") %>');
    src: url('<%= font_path("code_bold-webfont.eot?#iefix") %>') format('embedded-opentype'),
         url('<%= font_path("code_bold-webfont.woff2") %>') format('woff2'),
         url('<%= font_path("code_bold-webfont.woff") %>') format('woff'),
         url('<%= font_path("code_bold-webfont.ttf") %>') format('truetype'),
         url('<%= font_path("code_bold-webfont.svg#code_boldregular") %>') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'code_lightregular';
    src: url('<%= font_path("code_light-webfont.eot") %>');
    src: url('<%= font_path("code_light-webfont.eot?#iefix") %>') format('embedded-opentype'),
         url('<%= font_path("code_light-webfont.woff2") %>') format('woff2'),
         url('<%= font_path("code_light-webfont.woff") %>') format('woff'),
         url('<%= font_path("code_light-webfont.ttf") %>') format('truetype'),
         url('<%= font_path("code_light-webfont.svg#code_lightregular") %>') format('svg');
    font-weight: normal;
    font-style: normal;
}

/* MOBILE */
@media (max-width: 999px){	
	#logo {
		margin-left: 15px;
	}	
	.login_button {
		margin-right: 15px;
	}
	#map_wrapper {
		height: 400px;
	}
	svg {
		height: auto;
		width: auto;
	}	
	.text_align, .table_box, .profile_horizontal, .text_split {
		width: auto;
	}
	.content_realignment, .zoom_holder, .table_wrapper {
		width: 100%;
	}
	.table_box, .about_align {
		border-radius: 0px;
	}	
	#zoom_holder {
		position: absolute;
		left: inherit;
		right: 10px;
		margin-left: 0;
	}
	.text_align  > a > h1 {
		text-align: center;
		display: block;
	}	
	.profile_horizontal {
		margin: 0px 0px 0px 5px;
	}
	.profile_horizontal.tweets {
		display: none;
	}
	.profile_picture {
		margin-top: 20px;
		margin-left: 5px;
	}
	.text_split {
		margin-left: 0;
		margin-right: 0;
	}
	.coordinate {
		width: 96px;
	}
}
